<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background3"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/bpg_nino_normal"
        android:text="@string/authorization"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <EditText
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:id="@+id/emailET2"
        android:autofillHints="emailAddress"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:background="#50ffffff"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/bpg_nino_normal"
        android:hint="@string/enter_mail"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress" />
    <EditText
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/passwordET2"
        android:layout_width="393dp"
        android:layout_height="wrap_content"
        android:background="#50ffffff"
        android:drawableStart="@drawable/ic_baseline_receipt_24"
        android:drawablePadding="20dp"
        android:autofillHints="password"
        android:fontFamily="@font/bpg_nino_normal"
        android:hint="@string/enter_pass"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />
    <Button
        android:id="@+id/loginButton"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:backgroundTint="#50A33333"
        />
    <TextView
        android:id="@+id/registrationTV"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/register"
        android:textColor="@color/white"/>
</LinearLayout>